{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@screens/*": ["screens/*"],
      "@shared/*": ["shared/*"],
      "@styles/*": ["../styles/*"],
      "@assets/*": ["../assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", "babel.config.js"]
}
